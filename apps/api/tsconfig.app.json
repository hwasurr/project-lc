{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "emitDecoratorMetadata": true,
    "target": "es2015",
    "lib": ["es2020"],
    "esModuleInterop": true,
  },
  "exclude": [
    "**/*.spec.ts"
  ],
  "include": [
    "**/*.ts",
    "../../libs/nest-core/@types"
  ]
}