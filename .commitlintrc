{
    "extends": [
        "@commitlint/config-angular"
    ],
    "rules": {
        "subject-case": [
            2,
            "always",
            [
                "sentence-case",
                "start-case",
                "pascal-case",
                "upper-case",
                "lower-case"
            ]
        ],
        "type-enum": [
            2,
            "always",
            [
                "chore",
                "ci",
                "docs",
                "feat",
                "fix",
                "perf",
                "improve",
                "refactor",
                "revert",
                "style",
                "test",
                "infra"
            ]
        ],
        "type-case": [
            2,
            "always",
            [
                "lower-case"
            ]
        ]
    }
}